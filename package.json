{
  "name": "ps5vault",
  "version": "1.0.9",
  "description": "PS5 Vault: organize PPSA folders safely with verified copy/move, original Electron transfer windows, clear progress/ETA, and conflict resolution.",
  "author": "Nookie",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder --publish never",
    "dist:mac": "electron-builder --mac --publish never",
    "dist:win": "electron-builder --win --publish never"
  },
  "devDependencies": {
    "electron": "22.3.27",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nookie.ps5vault",
    "productName": "PS5 Vault",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "scan.js",
      "ftp.js",
      "help.js",
      "utils.js",
      "index.html",
      "ui-overrides.css",
      "assets/**/*",
      "!assets/screenshots/**",
      "!**/*.map",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "extraMetadata": {
      "version": "1.0.9"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "artifactName": "PS5Vault-${version}-mac-${arch}.${ext}"
    }
  },
  "dependencies": {
    "basic-ftp": "^5.1.0",
    "clear-cache": "^1.1.0",
    "electron-updater": "^6.7.3",
    "npx": "^10.2.2",
    "readdirp": "3.6.0"
  }
}