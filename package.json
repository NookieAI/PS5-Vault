{
  "name": "ps5vault",
  "version": "1.1.2",
  "description": "PS5 Vault: organize PPSA folders safely with verified copy/move, original Electron transfer windows, clear progress/ETA, and conflict resolution. Supports FTP scanning and transfer for direct PS5 interaction.",
  "author": "Nookie",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder -w portable --publish never",
    "dist:x64": "electron-builder -w portable --x64 --publish never",
    "dist:linux": "electron-builder -l tar.gz --publish never",
    "lint": "eslint *.js --fix",
    "test": "jest"
  },
  "devDependencies": {
    "electron": "22.3.27",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.nookie.ps5vault",
    "productName": "PS5 Vault",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "scan.js",
      "ftp.js",
      "help.js",
      "utils.js",
      "ftp-backend.js",
      "index.html",
      "ui-overrides.css",
      "assets/**/*",
      "!assets/screenshots/**",
      "!**/*.map",
      "package.json"
    ],
    "asar": true,
    "compression": "maximum",
    "extraMetadata": {
      "version": "1.1.2"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "PS5Vault-${version}-portable-${arch}.exe"
    },
    "linux": {
      "target": "tar.gz",
      "category": "Utility",
      "icon": "assets/logo.png",
      "artifactName": "PS5Vault-${version}-linux-${arch}.tar.gz"
    }
  },
  "dependencies": {
    "basic-ftp": "^5.1.0",
    "clear-cache": "^1.1.0",
    "electron-updater": "^6.7.3",
    "npx": "^10.2.2",
    "readdirp": "3.6.0"
  }
}